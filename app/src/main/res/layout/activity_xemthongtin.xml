<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.cardview.widget.CardView
        android:id="@+id/cvthongtin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#EFF89B">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="100dp"
                android:layout_margin="5dp"
                android:layout_gravity="center">
                <ImageView

                    android:layout_gravity="center"
                    android:id="@+id/imgxemthongtin"
                    android:layout_margin="5dp"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/douong"/>

            </androidx.cardview.widget.CardView>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phan Văn Phùng"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#00BCD4"
                android:textSize="24sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="phungvip"
                android:layout_gravity="center"
                android:textColor="#757574"
                android:textSize="20sp"/>
            <TextView
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tôi không có đam mê gì cả, tôi chỉ có đam mê hiểu biết"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="cursive"/>
            <TextView
                android:textStyle="italic"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Công thức đã đăng : 12"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:padding="10dp"
        android:layout_below="@id/cvthongtin"
        android:id="@+id/rcv_thongtin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_nav"
        android:background="@color/teal_200"
        />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_menu"
        android:layout_alignParentBottom="true"
        android:background="#DAEF09"
        app:itemIconTint="#FBFAF8"
        app:itemTextColor="#F9FAFA"
        />
</RelativeLayout>