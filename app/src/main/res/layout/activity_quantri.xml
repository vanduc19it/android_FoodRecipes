<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Accounts"
    android:background="#9CF1F1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:background="#9CF1F1"
        android:id="@+id/linearacount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="100dp"
            android:layout_margin="10dp">
            <ImageView

                android:id="@+id/imgpersonacount"
                android:layout_margin="10dp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:scaleType="centerCrop"
                android:src="@drawable/douong"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="Admin Phùng víp"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/xeminfor"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:text="Xem thông tin"
                android:textSize="18sp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btneditacount"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/edit"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/linearacount"
        android:id="@+id/linearitemacount">
        <LinearLayout
            android:background="@drawable/vien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/thongke"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Thống kê"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lager"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:background="@drawable/vien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/managecommnet"
                android:layout_margin="20dp"/>

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Quản lý bình luận"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lager"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:background="@drawable/vien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/manageuse"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Quản lý người dùng"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lager"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:background="@drawable/vien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/managerecipep"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Quản lý công thức"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lager"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:background="@drawable/vien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/managecategory"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Quản lý danh mục"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lager"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:background="@drawable/vien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/managenews"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Quản lý tin tức"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lager"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:background="@drawable/vien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/duyetmonan"
                android:layout_margin="20dp"/>
            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Duyệt món ăn"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/lager"
                android:layout_margin="20dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btndangxuat"
        android:background="@drawable/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearitemacount"
        android:layout_margin="20dp"
        android:textColor="#F6F3F3"
        android:text="Đăng xuất"/>
</LinearLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:menu="@menu/bottom_menu"
        android:layout_alignParentBottom="true"
        android:background="#DAEF09"
        app:itemIconTint="#FBFAF8"
        app:itemTextColor="#F9FAFA"
        />
</RelativeLayout>